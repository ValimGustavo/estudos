{{#each erros}}
   <div class="alert alert-danger">{{text}}</div> 
{{/each}}


<h3>Nova categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categoria/banco/salvar" method="post">
            <label for="nome">Nome:</label>
                <input id="nome" name="nome" placeholder="Nome da categoria" class="form-control">
            

            <label for="slug" class="mt-4">Slug</label>
                <input id="slug" name="slug" placeholder="Slug da categoria" class="form-control">
            
            <button type="submit" class="btn btn-success mt-4">Criar categoria</button>
        </form>
    </div>
</div>